#include <stdio.h> // Structure to store student details struct Student { int roll; char name[50]; float marks[5]; float total; float average; }; int main() { int n, i, j; printf("Enter number of students: "); scanf("%d", &n); struct Student s[n]; // Array of structures for (i = 0; i < n; i++) { s[i].total = 0; printf("\nEnter details for student %d\n", i + 1); printf("Enter Roll Number: "); scanf("%d", &s[i].roll); printf("Enter Name: "); scanf("%s", s[i].name); // Enter marks for 5 subjects for (j = 0; j < 5; j++) { printf("Enter mark for subject %d: ", j + 1); scanf("%f", &s[i].marks[j]); s[i].total += s[i].marks[j]; } s[i].average = s[i].total / 5.0; } // Display results printf("\n--- Student Mark Report ---\n"); for (i = 0; i < n; i++) { printf("\nRoll No: %d", s[i].roll); printf("\nName : %s", s[i].name); printf("\nTotal : %.2f", s[i].total); printf("\nAverage: %.2f\n", s[i].average); if (s[i].average >= 50) printf("Result : PASS\n"); else printf("Result : FAIL\n"); } return 0; }
