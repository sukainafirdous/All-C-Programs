#include <stdio.h> // Function definitions int add(int a, int b) { return a + b; } int sub(int a, int b) { return a - b; } int mul(int a, int b) { return a * b; } int divide(int a, int b) { return (b != 0) ? a / b : 0; } int main() { int choice, x, y, result; // Array of function pointers int (*ops[])(int, int) = {add, sub, mul, divide}; printf("Simple Calculator using Function Pointers\n"); printf("1. Add\n2. Subtract\n3. Multiply\n4. Divide\n"); printf("Enter choice: "); scanf("%d", &choice); if (choice < 1 || choice > 4) { printf("Invalid choice!\n"); return 0; } printf("Enter two numbers: "); scanf("%d %d", &x, &y); result = (*ops[choice - 1])(x, y); printf("Result = %d\n", result); return 0; }
